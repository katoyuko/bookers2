<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3">
      <h1 class="title">Editing Book</h1>

      <div class="form">
        <%= form_for(@book)do |f| %>
          <% if @book.errors.any? %>  <!-- バリデーションのエラーメッセージを表示する（@bookにエラー情報が格納されている -->
            <h2> <%= @book.errors.count %> errors prohibited this obj from being saved </h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>  <!-- エラーメッセージをリストで表示 -->
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>  <!-- if文のend -->

        <div class="field row">
          <label for="title"> Title </label>
          <%= f.text_field :title, autofocus: true, class: "col-xs-12 book_title", placeholder: "title" %>
        </div>

        <div class="field row">
          <label for="opinion"> Opinion </label>
          <%= f.text_area :opinion, rows:"2", class: "col-xs-12 book_body", placeholder: "opinion" %>
        </div>

        <div class="action row">
           <%= f.submit "Update Book", class: "col-xs-12 btn btn-lg btn btn-primary glyphicon glyphicon-wrench" %>
           <% end %>
        </div>
      </div>


    <%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>
    <%= link_to "back", books_path, class: "back" %>

    </div>
  </div>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p class="company">CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>


<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <header class="navbar navbar-top navbar-inverse">

    <div class="container">
      <nav class="nav navbar-nav navbar-left">
       <p> Bookers </p>
      </nav>

      <nav class="navbar navbar-dark bg-dark" >

        <ul class="nav navbar-nav navbar-right">

            <!-- ログイン後のheader -->
            <% if user_signed_in? %>
              <li class="nav item">
                <%=link_to "Home", user_path(current_user.id), class: "glyphicon glyphicon-home home" %>
              </li>
              <li class="nav item">
                <%=link_to "Users", users_path, class: "glyphicon glyphicon-user users" %>
              </li>
              <li class="nav item">
                <%=link_to "Books", books_path, class: "glyphicon glyphicon-book books" %>
              </li>
              <li class="nav item">
                <%=link_to "logout", destroy_user_session_path, class: "glyphicon glyphicon-log-out logout", method: :delete %>
              </li>
            <!-- ログイン前のheader -->
            <% else %>
              <li class="nav item">
                <%=link_to "Home", root_path, class: "glyphicon glyphicon-home home" %>
              </li>
              <li class="nav item">
                <%=link_to "About", about_path, class: "glyphicon glyphicon-link about" %>
              </li>
              <li class="nav item">
                <%=link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-new-window sign_up" %>
              </li>
              <li class="nav item">
                <%=link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
              </li>
            <% end %>
        </ul>
      </nav>
    </div>
  </header><!-- /header -->

  <div class="body">
    <%= yield %>
  </div>
</body>
</html>
